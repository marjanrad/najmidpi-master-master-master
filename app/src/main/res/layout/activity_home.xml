<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity"
    tools:openDrawer="start"
    android:layoutDirection="rtl">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounddpi"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/telehealth" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/measureweight_icon" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="ترازو"
                    android:textSize="@dimen/fontsize1" />
                <TextView
                    android:id="@+id/home_tv_balance"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:gravity="center"
                    android:text="0" />
                <ImageView
                    android:id="@+id/home_btn_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="6dp"
                    android:src="@drawable/iconrefresh" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">







                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/pressure" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="فشارسنج"
                    android:textSize="@dimen/fontsize1" />
                <TextView
                    android:id="@+id/home_tv_barometer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:gravity="center"
                    android:text="0" />
                <ImageView
                    android:id="@+id/home_btn_barometer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/iconrefresh" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/pedometr_icon" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="گام شمار"
                    android:textSize="@dimen/fontsize1"  />
                <TextView
                    android:id="@+id/home_tv_pedimeter"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:gravity="center"
                    android:text="0" />


                <ImageView
                    android:id="@+id/home_btn_pedimeter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/iconrefresh" />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/heartbeat1" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="ضربان قلب"
                    android:textSize="@dimen/fontsize1"  />

                <TextView
                    android:id="@+id/home_tv_heartbeat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:gravity="center"
                    android:text="0" />

                <ImageView
                    android:id="@+id/home_btn_heartbeat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/iconrefresh" />





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="25dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/blood" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="استتوسکوپ"
                    android:textSize="@dimen/fontsize1"  />
                <ImageView
                    android:id="@+id/home_tv_stethoscop"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="5"
                    android:scaleType="fitXY"
                    android:gravity="center"
                    android:src="@drawable/stetoscop_icon"
                    android:text="0" />


                <ImageView
                    android:id="@+id/home_btn_stethoscop"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:src="@drawable/iconrefresh" />





            </LinearLayout>
            <Button
                android:id="@+id/btn_save_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                android:text="ارسال اطلاعات به مرکز"
                android:background="@drawable/background_edittext"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <include layout="@layout/menue_main" />

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>






