<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dpi_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_view"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/main_tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="سامانه سلامت هوشمند"
        android:textStyle="bold"
        android:textColor="#0A538A"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/main_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_edittext_home"
        android:gravity="center"
        android:hint="تلفن و یا ایمیل خود را وارد نمایید ."
        android:maxLength="70"
        android:maxLines="1"
        android:padding="10dp"
        android:fontFamily="casual"
        android:textColor="#3F51B5"
        android:textColorHint="#7683CE" />

    <EditText
        android:id="@+id/main_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_edittext_home"
        android:gravity="center"
        android:hint="رمز عبور"
        android:inputType="textPassword"
        android:maxLength="70"
        android:maxLines="1"
        android:fontFamily="casual"
        android:padding="10dp"
        android:textColor="#3F51B5"
        android:textColorHint="#7683CE" />

    <Button
        android:id="@+id/main_btn_signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_edittext"
        android:text="ورود"
        android:textColor="#F3F1F1"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_btn_signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:background="@drawable/background_edittext"
        android:text="ثبت نام"
        android:textColor="#F3F1F1"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>