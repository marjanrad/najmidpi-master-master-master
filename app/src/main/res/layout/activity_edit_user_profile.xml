<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/edit_user_drawer"
    tools:openDrawer="start"
    android:layout_height="match_parent"
    tools:context=".activity.EditUserProfile"
    android:layoutDirection="rtl">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/backgrounddpi">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="نام:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_user_profile_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:padding="10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="نام خانوادگی:"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/edit_user_profile_family"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:padding="10dp"
                    android:maxLines="1"
                    android:maxLength="50" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="سن:"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/edit_user_profile_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:inputType="number"
                    android:padding="10dp"
                    android:maxLength="3"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="قد:"
                    android:textSize="20sp"
                    android:maxLength="3"/>
                <EditText
                    android:id="@+id/edit_user_profile_tall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:inputType="number"
                    android:padding="10dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="جنسیت:"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/edit_user_profile_radioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="4"
                    android:gravity="center_horizontal">

                    <RadioButton
                        android:id="@+id/edit_user_profile_radiomale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مرد"
                        android:textSize="20sp"
                        android:padding="10dp" />

                    <RadioButton
                        android:id="@+id/edit_user_profile_radiofemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="زن"
                        android:checked="true"
                        android:textSize="20sp"
                        android:padding="10dp"/>
                </RadioGroup>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="سابقه بیماری:"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edit_user_profile_patient_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/background_edittext_home"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>

            <Button
                android:id="@+id/edit_user_profile_btnsave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/background_edittext"
                android:padding="5dp"
                android:text="ثبت"
                android:textSize="20sp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <include layout="@layout/menue_main"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
